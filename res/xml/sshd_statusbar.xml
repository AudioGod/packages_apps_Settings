<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/sshd_statusbar_title" >
	
	<!-- Status bar brightness slider -->
	<com.android.settings.sshd.SystemSettingSwitchPreference
        android:key="status_bar_brightness_control"
        android:title="@string/status_bar_toggle_brightness"
        android:summary="@string/status_bar_toggle_brightness_summary"
        android:defaultValue="false" />
		
	<!-- Status bar double tap to sleep gesture -->
	<com.android.settings.sshd.SystemSettingSwitchPreference
        android:key="double_tap_sleep_gesture"
        android:title="@string/double_tap_to_sleep_title"
        android:summary="@string/double_tap_to_sleep_summary"
        android:defaultValue="true" />	
	
	<!-- Clock & Date  -->
	<PreferenceScreen
        android:key="clock_styles"
        android:title="@string/clock_styles_title"
        android:summary="@string/clock_styles_summary"
        android:fragment="com.android.settings.sshdtuner.statusbar.ClockStyles" />
	
	<!-- Network traffic -->
    <PreferenceScreen
        android:key="network_traffic"
        android:fragment="com.android.settings.sshdtuner.statusbar.Traffic"
        android:title="@string/network_traffic_title" />

</PreferenceScreen>
