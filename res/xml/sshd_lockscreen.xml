<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/sshd_lockscreen_title" >
	
	<!-- Lockscreen blur/see through -->
	<com.android.settings.sshd.SystemSettingSwitchPreference
                android:key="lockscreen_see_through"
                android:title="@string/lockscreen_see_through_title"
                android:summary="@string/lockscreen_see_through_summary"
                android:defaultValue="false" />
				
    <!-- Lockscreen blur/see through radious -->
    <com.android.settings.sshd.SeekBarPreference
                android:key="lockscreen_blur_radius"
                android:title="@string/lockscreen_blur_radius"
                android:max="25"
                settings:minimum="0"
                settings:unitsLeft=""
                settings:unitsRight=""
                android:persistent="false"
                android:dependency="lockscreen_see_through" />

</PreferenceScreen>
