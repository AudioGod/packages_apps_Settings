<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/sshd_ui_title" >

    <PreferenceCategory
        android:key="ui"
        android:title="@string/sshd_interface_title">
	
	    <!-- Custom Header -->
		<com.android.settings.preference.SystemSettingSwitchPreference
                android:key="status_bar_custom_header"
                android:title="@string/status_bar_custom_header_title"
                android:summary="@string/status_bar_custom_header_summary"
                android:defaultValue="false"/>
				
		<!-- Gesture anywhere -->
        <PreferenceScreen
     	        android:key="gesture_anywhere"
                android:fragment="com.android.settings.gestureanywhere.GestureAnywhereSettings"
                android:title="@string/gesture_anywhere_title" />

		<!-- Expanded Desktop -->		
        <PreferenceScreen
                android:key="expanded_desktop"
                android:title="@string/power_menu_expanded_desktop"
                android:fragment="com.android.settings.applications.ExpandedDesktopPreferenceFragment" />	
		   
	</PreferenceCategory>	   

</PreferenceScreen>
